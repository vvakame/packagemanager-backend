{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2015"
        ],
        "types": [
            "node",
            "mocha"
        ],
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "newLine": "LF",
        "noEmitOnError": true,
        "inlineSources": true
    },
    "include": [
        "lib/**/*.ts",
        "test/**/*.ts"
    ]
}