{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "listFiles": true,
        "newLine": "LF",
        "noEmitOnError": true,
        "inlineSources": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./**/*.d.ts",
        "./lib/typings/**/*.d.ts",
        "./typings/**/*.d.ts",
        "!./example/**/*.ts",
        "!./pages/**/*.ts",
        "!./bower_components/**/*.ts",
        "!./node_modules/**/*",
        "./node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "files": [
        "./lib/index.ts",
        "./lib/manager.ts",
        "./lib/model.ts",
        "./lib/repo.ts",
        "./lib/resolvedDependency.ts",
        "./lib/result.ts",
        "./lib/utils.ts",
        "./test/index_spec.ts",
        "./test/manager_spec.ts",
        "./test/repo_spec.ts",
        "./typings/bundle.d.ts",
        "./typings/empower/empower.d.ts",
        "./typings/minimatch/minimatch.d.ts",
        "./typings/mkdirp/mkdirp.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/node/node.d.ts",
        "./typings/power-assert-formatter/power-assert-formatter.d.ts",
        "./typings/power-assert/power-assert.d.ts",
        "./node_modules/typescript/lib/lib.es6.d.ts"
    ]
}
